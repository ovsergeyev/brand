//Block deal
.deal.page__deal.container
    .deal__address
        h3.deal__title Shipping Adress
        form(action="#").deal__form
            select.deal__select
                option Bangladesh
                option Germany
                option USA
            input(type="text", value="State").deal__input
            input(type="text", value="Postcode / Zip").deal__input
            div
                button(type="submit").deal__button get a quote
    .deal__coupon
        h3.deal__title coupon discount
        p.deal__text Enter your coupon code if you have one
        form(action="#").deal__form
            input(type="text", value="State").deal__input
            div
                button(type="submit").deal__button Apply coupon
    .deal__wrap-check
        .deal__check
            .deal__total
                p.deal__sub-total Sub total
                    span.deal__span $900
                p.deal__grand-total GRAND TOTAL
                    span.deal__span.pink $900
            div.deal__wrap-button
                a(href="#").button.deal__check-button Proceed to checkout
//End block deal